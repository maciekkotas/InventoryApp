<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/icons"
              android:orientation="vertical">

    <TextView
        android:id="@+id/name_view"
        style="@style/text_view_primary"/>

    <TextView
        android:id="@+id/info_view"
        style="@style/text_view_secondary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            style="@style/text_view_price"
            android:text="@string/currency"
            android:textAlignment="viewEnd"/>

        <TextView
            android:id="@+id/price_view"
            style="@style/text_view_price"/>

        <LinearLayout
            style="@style/quantity_layout">

            <TextView
                android:id="@+id/textView"
                style="@style/text_view_list"
                android:text="@string/quantity"/>

            <TextView
                android:id="@+id/quantity_view"
                style="@style/text_view_list"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/sell"
            style="@style/button_sell"
            android:src="@drawable/ic_cash_multiple_black_24dp"/>
    </LinearLayout>
</LinearLayout>

